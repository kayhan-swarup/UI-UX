<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/accentDarker" />
            <solid android:color="#DDFFFFFF" />

            <corners android:radius="10dp" />

            <padding
                android:bottom="8dp"
                android:left="5dp"
                android:right="5dp"
                android:top="8dp" />

        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid
                android:width="1dp"
                android:color="@color/accentDarker" />
            <solid android:color="@color/accent" />

            <corners android:radius="10dp" />

            <padding
                android:bottom="8dp"
                android:left="5dp"
                android:right="5dp"
                android:top="8dp" />

        </shape>
    </item>
</selector>