<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape>
            <gradient
                android:angle="-45"
                android:startColor="#22000000"
                android:centerColor="#88000000"
                android:endColor="#FF000000"
                />
            <!--<stroke android:width="1dp" android:color=" @color/primaryDark" />-->
            <corners android:radius="2dp" />

            <padding
                android:bottom="2dp"
                android:right="2dp"
                android:top="2dp"
                android:left="2dp"
                />

        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFFFF" />
            <!--<stroke android:width="1dp" android:color=" @color/primaryDark" />-->
            <corners android:radius="3dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

        </shape>
    </item>


</layer-list>