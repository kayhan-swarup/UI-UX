<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#137ECF</item>
        <item name="colorPrimaryDark">#1077AF</item>
        <item name="colorAccent">@color/accent</item>


        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>

    </style>
    <style name="CustomButton" parent="Widget.AppCompat.Button">

        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>
    <style name="CustomTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="CustomInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:padding">5dp</item>

    </style>


    <style name="CustomSubTitleStyle" parent="TextAppearance.MaterialComponents.Subtitle2">

        <item name="android:textColor">@color/white</item>

    </style>
    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background" >@drawable/edit_text_drawable</item>
    </style>
    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background" >@drawable/checkbox_checked</item>
        <item name="android:textColor">@color/check_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:button">@drawable/background_transparent</item>

    </style>
    <style name="CustomRadio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background" >@drawable/checkbox_checked</item>
        <item name="android:textColor">@color/check_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:button">@drawable/background_transparent</item>
    </style>

    <style name="FullScreenVideoTheme" parent="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDarker</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="TransparentCompat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarTheme">@style/AppTheme</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


<!--    <style name="CustomCalendarPicker"-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />
</resources>
